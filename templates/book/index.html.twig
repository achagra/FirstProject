{# templates/book/index.html.twig #}
<div class="container mt-4">
    <h1>List of Books</h1>

    {# NOUVEAU : Zone de recherche (Figure 3) #}
    <div class="card mb-4 shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">üîç Search by Author Username</h5>
        </div>
        <div class="card-body">
            {{ form_start(form) }}
                <div class="row g-3">
                    <div class="col-md-9">
                        {{ form_widget(form.Author, {
                            'attr': {
                                'class': 'form-control form-control-lg',
                                'placeholder': 'Enter author username (ex: john_doe)...'
                            }
                        }) }}
                    </div>
                    <div class="col-md-3">
                        {{ form_widget(form.Search, {
                            'attr': {
                                'class': 'btn btn-success w-100'
                            }
                        }) }}
                    </div>
                </div>
            {{ form_end(form) }}
        </div>
    </div>

    {# VOTRE TABLEAU EXISTANT (maintenu) #}
    <div class="table-responsive">
        <table class="table table-striped table-hover table-bordered table-sm mb-0">
            <thead class="table-dark">
                <tr>
                    <th>Title</th>
                    <th>Publication Date</th>
                    <th>Published</th>
                    <th>Category</th>
                    <th>Author</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {% for l in list %}
                <tr>
                    <td>{{ l.title }}</td>
                    <td>{{ l.publicationDate ? l.publicationDate|date('Y-m-d') : 'N/A' }}</td>
                    <td>
                        <span class="badge {{ l.published ? 'bg-success' : 'bg-danger' }}">
                            {{ l.published ? 'Yes' : 'No' }}
                        </span>
                    </td>
                    <td>{{ l.category }}</td>
                    <td>
                        <span class="badge bg-info">{{ l.author.username }}</span>
                    </td>
                    
                </tr>
                {% else %}
                <tr>
                    <td colspan="6" class="text-center text-muted py-4">
                        <i class="fas fa-search me-2"></i>
                        {% if form.vars.submitted %}
                            No books found for "{{ form.author.vars.data }}"
                        {% else %}
                            No books available
                        {% endif %}
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    {# VOS COMPTAGES EXISTANTS #}
    <div class="mt-3">
        <b>Number of published books:</b> <span class="badge bg-success">{{ published_count }}</span><br>
        <b>Number of unpublished books:</b> <span class="badge bg-warning">{{ non_published_count }}</span>
    </div>

    {# VOTRE BOUTON CREATE #}
    <div class="mt-3">
        <a href="{{ path('addBook') }}" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Create New Book
        </a>
    </div>
</div>